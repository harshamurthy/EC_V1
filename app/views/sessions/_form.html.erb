<%= form_for(@session) do |f| %>
  <% if @session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
      <% @session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :client_id %><br>
    <%= f.select :client_id, options_for_select(@clients.collect{ |u| [u.name, u.id] }) %>
  </div>
  <div class="field">
    <%= f.label :routine_id %><br>
    <%= f.select :routine_id, options_for_select(@routines.collect{ |u| [u.description, u.id] }) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
